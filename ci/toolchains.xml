<?xml version="1.0" encoding="UTF-8"?>
<toolchains>

    <!-- JDK toolchains @ CI -->
    <!-- https://maven.apache.org/guides/mini/guide-using-toolchains.html -->

    <toolchain>
        <type>jdk</type>
        <provides>
            <id>JavaSE-1.8</id>
        </provides>
        <configuration>
            <jdkHome>/usr/lib/jvm/java-8-oracle</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <id>JavaSE-1.9</id>
        </provides>
        <configuration>
            <jdkHome>/usr/lib/jvm/java-9-oracle</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <system>ubuntu</system>
            <vendor>oracle</vendor>
            <version>1.8</version>
        </provides>
        <configuration>
            <jdkHome>/usr/lib/jvm/java-8-oracle</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <system>ubuntu</system>
            <vendor>oracle</vendor>
            <version>1.9</version>
        </provides>
        <configuration>
            <jdkHome>/usr/lib/jvm/java-9-oracle</jdkHome>
        </configuration>
    </toolchain>

</toolchains>
